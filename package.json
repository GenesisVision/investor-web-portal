{
  "private": true,
  "workspaces": ["packages/*"],
  "dependencies": {
    "gv-api-web": "git+https://github.com/GenesisVision/gv-api-web.git#development",
    "gv-react-components": "^0.0.30",
    "scriptjs": "^2.5.9"
  },
  "devDependencies": {
    "husky": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{ts,tsx,js,json,scss}": ["prettier --write", "git add"],
      "**/*.{ts,tsx,js}": ["import-sort --write", "git add"]
    }
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [">0.25%", "not op_mini all", "ie 11"]
  }
}
